<resources>

    <style name="discoverInputCounterStyle">
        <item name="android:textColor">@color/discover_color_999999</item>
        <item name="android:textSize">@dimen/public_font_9sp</item>
    </style>

    <style name="discoverPublishTextViewStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/discover_color_333333</item>
        <item name="android:textSize">@dimen/public_font_18sp</item>
    </style>


    <style name="discoverPublishEditTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/discover_shape_item_bg</item>
        <item name="android:textColorHint">@color/discover_color_bbbbbb</item>
        <item name="android:textColor">@color/discover_color_333333</item>
        <item name="android:textSize">@dimen/public_font_15sp</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
