<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/discover_shape_item_bg"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/discover_shape_item_ll_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/discover_item_business_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/discover_color_333333"
                android:textSize="@dimen/public_font_15sp"
                tools:text="name" />

            <View
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/discover_item_business_tv_name"
                android:background="@color/discover_color_333333"
                android:visibility="gone" />

            <TextView
                android:id="@+id/discover_item_business_tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/discover_item_business_tv_name"
                android:gravity="center"
                android:textColor="@color/discover_color_333333"
                android:textSize="@dimen/public_font_15sp"
                android:visibility="gone"
                tools:text="总经理" />

            <TextView
                android:id="@+id/discover_item_business_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/discover_color_55b1fe"
                android:textSize="@dimen/public_font_14sp"
                tools:text="上游企业" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/discover_item_business_tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/discover_color_666666"
                android:textSize="@dimen/public_font_14sp"
                tools:text="上海齐治化工有限公司" />

            <TextView
                android:id="@+id/discover_item_business_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/discover_color_999999"
                android:textSize="@dimen/public_font_12sp"
                tools:text="A股600321" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <TextView
            android:id="@+id/discover_item_business_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/discover_color_333333"
            android:textSize="@dimen/public_font_15sp"
            tools:text="【资源】等产品都是水电费水电费水电费施工阿斯蒂芬水岸东方" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/discover_shape_gray_corner_2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="这是一个标签"
            android:textColor="@color/discover_color_a52b2f"
            android:textSize="@dimen/public_font_8sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/discover_item_business_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/discover_color_999999"
                android:textSize="@dimen/public_font_11sp"
                tools:text="1小时前" />

            <ImageView
                android:id="@+id/discover_item_business_img_msg"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/discover_item_business_tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/discover_shape_red_corner_4"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="立即联系"
                android:textColor="@color/public_white"
                android:textSize="@dimen/public_font_10sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
